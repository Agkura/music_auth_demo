<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= flash[:errors].each {|error| "<p>#{error}</p>" } if flash[:errors] %>

    <header>
      <% if current_user %>
        <%= logout_button %>
      <% else %>
        <%= login_button  %>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>
